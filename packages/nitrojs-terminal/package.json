{
	"name": "@skylixgh/nitrojs-terminal",
	"version": "2.0.0-dev",
	"description": "NitroJS Terminal Module",
	"author": "Skylix",
	"homepage": "https://github.com/SkylixGH/NitroJS#readme",
	"license": "MIT",
	"main": "src/Terminal.js",
	"type": "module",
	"directories": {
		"src": "src",
		"docs": "docs",
		"examples": "examples"
	},
	"files": [
		"src",
		"docs",
		"examples"
	],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SkylixGH/NitroJS.git"
	},
	"scripts": {
		"run-ts": "node --experimental-specifier-resolution=node --loader ts-node/esm.mjs",
		"terminal:e:logging": "npm run run-ts -- ./examples/logging/Index.ts",
		"terminal:e:prompts": "npm run run-ts -- ./examples/prompts/Index.ts",
		"terminal:e:animation": "npm run run-ts -- ./examples/animation/Index.ts"
	},
	"bugs": {
		"url": "https://github.com/SkylixGH/NitroJS/issues"
	},
	"dependencies": {
		"chalk": "4.1.2",
		"cli-cursor": "^4.0.0",
		"luxon": "^2.3.0",
		"strip-ansi": "^7.0.1"
	},
	"devDependencies": {
		"@types/luxon": "^2.0.9",
		"ts-node": "^10.4.0",
		"type-fest": "^2.9.0"
	}
}
